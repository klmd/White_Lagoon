<div class="container-fluid">
    <div class="row">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Dashboard</h4>
        </div>
    </div>
    <div class="row">
        @* booking booking radial chart *@
        <div class="col-md-6 col-xl-4 mt-2">
            <div class="card">
                <div class="card-body">
                    <div class="float-end mt-2">
                        <div id="totalBookingRadialChart" data-colors="['--bs-success']"></div>
                    </div>
                    <div>
                        <p class="text-muted mb-0">
                            TotalBookings
                        </p>
                        <h4 class="my-1">
                            <span id="spanTotalBookingCount"></span>
                        </h4>
                    </div>

                    <p class="text-muted mt-3 mb-0" id="sectionBookingCount"></p>

                    <div class="justify-content-center text-center chart-spinner" style="display:none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* booking user radial chart *@
        <div class="col-md-6 col-xl-4 mt-2">
            <div class="card">
                <div class="card-body">
                    <div class="float-end mt-2">
                        <div id="totalUserRadialChart" data-colors='["--bs-warning"]'></div>
                    </div>
                    <div>
                        <p class="text-muted mb-0">
                            TotalUsers
                        </p>
                        <h4 class="my-1">
                            <span id="spanTotalUserCount"></span>
                        </h4>
                    </div>

                    <p class="text-muted mt-3 mb-0" id="sectionUserCount"></p>

                    <div class="justify-content-center text-center chart-spinner" style="display:none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* booking revenue radial chart *@
        <div class="col-md-6 col-xl-4 mt-2">
            <div class="card">
                <div class="card-body">
                    <div class="float-end mt-2">
                        <div id="totalRevenueRadialChart" data-colors='["#0F0006B"]'></div>
                    </div>
                    <div>
                        <p class="text-muted mb-0">
                            TotalRevenue
                        </p>
                        <h4 class="my-1">
                            <span id="spanTotalRevenueCount"></span>
                        </h4>
                    </div>

                    <p class="text-muted mt-3 mb-0" id="sectionRevenueCount"></p>

                    <div class="justify-content-center text-center chart-spinner" style="display:none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* booking user line chart *@
        <div class="col-md-12 col-xl-8 mt-2">
            <div class="card">
                <div class="card-body">
                    <div>
                        <p class="text-muted mb-0">New Members And Bookings In Past 30 Days</p>
                    </div>
                    <div id="newMembersAndBookingsLineChart" data-colors='["--bs-warning","--bs-primary"]'>
                    </div>
                    <div class="justify-content-center text-center chart-spinner" style="display:none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* booking Customer bookings pie chart *@
        <div class="col-md-12 col-xl-4 mt-2">
            <div class="card">
                <div class="card-body">
                    <div class="float-end mt-2">
                        <p class="text-muted mb-0">
                            Customer Bookings
                        </p>
                    </div>

                    <div id="customerBookingsPieChart" data-colors='["--bs-warning","--bs-primary"]'></div>


                    <p class="text-muted mt-3 mb-0" id="sectionRevenueCount"></p>

                    <div class="justify-content-center text-center chart-spinner" style="display:none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/dashboard/getCustomerAndBookingsLineChart.js"></script>
    <script src="~/js/dashboard/getCustomerBookingsPieChart.js"></script>
    <script src="~/js/dashboard/RadialChart.js"></script>
    <script src="~/js/dashboard/getTotalRevenueRadial.js"></script>
    <script src="~/js/dashboard/getTotalUserRadial.js"></script>
    <script src="~/js/dashboard/getTotalBookingsRadial.js"></script>
    @* <script src="~/js/apexcharts.min.js"></script>
    <script src="~/js/dashboard.js"></script> *@
}